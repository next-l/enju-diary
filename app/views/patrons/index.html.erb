<h1>Listing patrons</h1>

<table>
  <tr>
    <th>Full name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patrons.each do |patron| %>
  <tr>
    <td><%= patron.full_name %></td>
    <td><%= link_to 'Show', patron %></td>
    <td><%= link_to 'Edit', edit_patron_path(patron) %></td>
    <td><%= link_to 'Destroy', patron, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate(@patrons) %>

<%= link_to 'New Patron', new_patron_path %>
